<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/timeline_item_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_profile_image" />

        <com.frissbi.CustomFontTextView
            android:id="@+id/meeting_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/timeline_item_profile_image"
            android:text="Meeting Message"
            android:textColor="@color/black" />

        <com.frissbi.CustomFontTextView
            android:id="@+id/meeting_posted_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Time"
            android:textSize="10sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>