<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/timeline_item_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_profile_image" />

    <View
        android:id="@+id/timeline_view"
        android:layout_width="1dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/timeline_item_profile_image"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/timeline_view"
        android:padding="10dp">

        <com.frissbi.CustomFontTextView
            android:id="@+id/profileName_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/profile_postedTime_tv"
            android:text="Name" />

        <com.frissbi.CustomFontTextView
            android:id="@+id/profile_update_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileName_tv"
            android:text="Profile Update"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/timeline_activity_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/profile_update_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_profile_image" />


        <com.frissbi.CustomFontTextView
            android:id="@+id/profile_postedTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Time"
            android:textColor="@color/gray"
            android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>
