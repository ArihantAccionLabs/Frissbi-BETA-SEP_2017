<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:id="@+id/upcoming_meeting_cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <com.frissbi.Utility.CustomFontTextView
            android:id="@+id/meeting_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch with sunil"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <com.frissbi.Utility.CustomFontTextView
            android:id="@+id/upcoming_meeting_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meeting_description_tv"
            android:layout_marginTop="30dp"
            android:text="On 7th march at 1pm"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>