<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/timeline_item_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_profile_image" />

        <View
            android:id="@+id/timeline_view"
            android:layout_width="1dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/timeline_item_profile_image"
            android:background="@color/lightgray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/timeline_item_profile_image">

            <com.frissbi.CustomFontTextView
                android:id="@+id/profileName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/location_postedTime_tv"
                android:text="Name" />

            <com.frissbi.CustomFontTextView
                android:id="@+id/check_in_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileName_tv"
                android:layout_centerVertical="true"
                android:text="Check In at..."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.frissbi.CustomFontTextView
                android:id="@+id/location_postedTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Time"
                android:textSize="10sp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>