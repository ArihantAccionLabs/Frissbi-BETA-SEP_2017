<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/loc_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/loc_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/loc_checkbox" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/loc_rating"
            android:layout_toRightOf="@+id/loc_image">

            <com.frissbi.CustomFontTextView
                android:id="@+id/loc_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.frissbi.CustomFontTextView
                android:id="@+id/loc_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loc_name_tv"
                android:layout_marginTop="4dp"
                android:text="Address" />
        </RelativeLayout>

        <RatingBar
            android:id="@+id/loc_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:isIndicator="true"
            android:progressTint="@color/bg_color"
            android:rating="3" />
    </RelativeLayout>
</android.support.v7.widget.CardView>