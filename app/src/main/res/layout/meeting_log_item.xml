<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meeting_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/status_icon_imageView">

            <com.frissbi.CustomFontTextView
                android:id="@+id/meeting_log_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Description"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/meeting_log_description_tv"
                android:layout_marginTop="6dp">

                <com.frissbi.CustomFontTextView
                    android:id="@+id/meeting_log_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textColor="@color/black" />

                <com.frissbi.CustomFontTextView
                    android:id="@+id/meeting_log_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_log_date_tv"
                    android:layout_marginTop="4dp"
                    android:text="Time:"
                    android:textColor="@color/black" />
            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/status_icon_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/meet_reject" />
    </RelativeLayout>


</android.support.v7.widget.CardView>