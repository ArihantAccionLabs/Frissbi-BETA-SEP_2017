<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="50dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frissbi_pane1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:weightSum="15">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="#ffffff"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <com.frissbi.Utility.MyTextView
                    style="@style/AlertDialog.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="frissbi"
                    android:textColor="#000000"
                    android:id="@+id/user_name"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:layout_weight="2"

                android:id="@+id/home1"
                android:background="@drawable/background"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="35dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/home_button" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_height="wrap_content">
                <com.frissbi.Utility.MyTextView
                    style="@style/AlertDialog.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#000000"
                     android:id="@+id/home"

                    android:textSize="18dp" />
            </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e3e3">

            </View>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:layout_weight="2"
                android:background="@drawable/background"
                android:id="@+id/meeting1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/meeting" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"

                    android:layout_height="wrap_content">
                    <com.frissbi.Utility.MyTextView
                        style="@style/AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meetings"
                        android:layout_marginLeft="18dp"
                        android:textColor="#000000"
                        android:id="@+id/meeting"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e3e3">

            </View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/background"
                android:id="@+id/friends1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/menu_friend" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"

                    android:layout_height="wrap_content">
                    <com.frissbi.Utility.MyTextView
                        style="@style/AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friends"
                        android:layout_marginLeft="18dp"
                        android:textColor="#000000"
                        android:id="@+id/friends"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e3e3">

            </View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/background"
                android:id="@+id/profilepic1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/menu_profile2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"

                    android:layout_height="wrap_content">
                    <com.frissbi.Utility.MyTextView
                        style="@style/AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:layout_marginLeft="18dp"
                        android:textColor="#000000"
                        android:id="@+id/profile"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#e3e3e3">

            </View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:id="@+id/seeting1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/background"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/setting" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"

                    android:layout_height="wrap_content">
                    <com.frissbi.Utility.MyTextView
                        style="@style/AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:layout_marginLeft="18dp"
                        android:textColor="#000000"
                        android:id="@+id/settings"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e3e3">

            </View>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:id="@+id/logout1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/menu_logout1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"

                    android:layout_height="wrap_content">
                    <com.frissbi.Utility.MyTextView
                        style="@style/AlertDialog.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:layout_marginLeft="18dp"
                        android:textColor="#000000"
                        android:id="@+id/lagout"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>








        </LinearLayout>
    </LinearLayout>
</LinearLayout>
