<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bg_color">


        <com.frissbi.Utility.MyTextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Agenda"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/maa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:orientation="vertical">


        <com.frissbi.Utility.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Meeting description"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/meetingdesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="bottom"
            android:hint="Type here..."
            android:padding="10dp"
            android:textSize="14dp"
            android:typeface="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meeting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateset"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.frissbi.Utility.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:text="Meeting duration"
            android:textColor="#000000"
            android:textSize="15dp" />

        <com.frissbi.Utility.MyTextView
            android:id="@+id/meeting_duration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Select duration"
            android:textColor="#000000"
            android:textSize="12dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#e3e3e3">

        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maa"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">


        <com.frissbi.Utility.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:text="Meeting date"
            android:textColor="#000000"
            android:textSize="15dp" />


        <com.frissbi.Utility.MyTextView
            android:id="@+id/datetime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="12dp"
            android:text="Select date"
            android:textColor="#000000"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="#e3e3e3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/maa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/meeting1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <com.frissbi.Utility.MyTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="10dp"
                    android:text="Meeting time"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <com.frissbi.Utility.MyTextView
                    android:id="@+id/meeting_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Select time"
                    android:textColor="#000000"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e3e3e3"></View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meeting2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maa1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <com.frissbi.Utility.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="10dp"
            android:text="Meeting place"
            android:textColor="#000000"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/to2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maa1"
            android:layout_marginTop="2dp"
            android:background="@drawable/background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.frissbi.Utility.MyTextView
                    android:id="@+id/to1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meeting At"
                    android:textColor="#000000"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center">

                <com.frissbi.Utility.MyTextView
                    android:id="@+id/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/meeting2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/meeting3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"

            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">


                <com.frissbi.Utility.HorizontalView
                    android:id="@+id/hor_list"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                </com.frissbi.Utility.HorizontalView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:gravity="right">

                <Button
                    android:id="@+id/addFriends"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/meeting2"
                    android:layout_gravity="right"
                    android:background="@drawable/addbutton"
                    android:gravity="right" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />
    </LinearLayout>

    <Button
        android:id="@+id/done"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/done"
        android:gravity="right|fill" />


</RelativeLayout>
