<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.fragments.AddReminderDialogFragment">

    <com.frissbi.app.Utility.CustomFontTextView
        android:id="@+id/remainder_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:text="ADD REMINDER"
        android:textColor="@color/light_red"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remainder_text">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/remainder_text_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/message_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_chat" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/message_imageView">

                        <EditText
                            android:id="@+id/reminder_message_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Text" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/message_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/remainder_text_rl"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/blue_grey_800" />

                <RelativeLayout
                    android:id="@+id/remainder_date_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/message_view"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/calendar_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_calendar" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/calendar_imageView">


                        <com.frissbi.app.Utility.CustomFontTextView
                            android:id="@+id/remainder_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017-01-01"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.frissbi.app.Utility.CustomFontTextView
                            android:id="@+id/date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/remainder_date_tv"
                            android:layout_marginTop="10dp"
                            android:text="Date"
                            android:textColor="@color/light_red" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/date_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/remainder_date_rl"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/blue_grey_800" />


                <RelativeLayout
                    android:id="@+id/remainder_time_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_view"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/clock_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_clock" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/clock_imageView">


                        <com.frissbi.app.Utility.CustomFontTextView
                            android:id="@+id/remainder_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:text="10:00"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.frissbi.app.Utility.CustomFontTextView
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/remainder_time_tv"
                            android:layout_marginTop="10dp"
                            android:text="Time"
                            android:textColor="@color/light_orange" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/confirm_remainder_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/remainder_text"
        android:layout_marginRight="20dp"
        android:src="@drawable/btn_arrow" />


</RelativeLayout>
