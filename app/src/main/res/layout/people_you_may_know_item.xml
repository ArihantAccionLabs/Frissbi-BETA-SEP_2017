<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upcoming_meeting_cardView"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:layout_width="60dp"
            android:id="@+id/pepole_profile_image"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_profile_image" />

        <com.frissbi.Utility.CustomFontTextView
            android:id="@+id/people_userName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/pepole_profile_image"
            android:text="Andriod Developer"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/pepole_add_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/bg_color"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="Add Friend"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>