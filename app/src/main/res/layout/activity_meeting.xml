<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/triangle_bg">

    <RelativeLayout
        android:id="@+id/attendee_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/meeting_attendees_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/add_attendee_button" />

        <Button
            android:id="@+id/add_attendee_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_add" />

        <com.frissbi.Utility.CustomFontTextView
            android:id="@+id/add_attendee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Attendees"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/attendee_rl"
        android:layout_marginTop="20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/meeting_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/date_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/calendar_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_calendar" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/calendar_imageView">


                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/meeting_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017-01-01"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/meeting_date_tv"
                            android:layout_marginTop="10dp"
                            android:text="Date"
                            android:textColor="@color/light_red" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/date_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/date_rl"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/blue_grey_800" />


                <RelativeLayout
                    android:id="@+id/time_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_rl"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/clock_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_clock" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/clock_imageView">


                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/meeting_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:text="10:00"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/meeting_time_tv"
                            android:layout_marginTop="10dp"
                            android:text="Time"
                            android:textColor="@color/light_orange" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/time_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/time_rl"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/blue_grey_800" />


                <RelativeLayout
                    android:id="@+id/duration_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_view"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/duration_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_fwd" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/duration_imageView">

                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/meeting_duration_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="2 hours"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/duration_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/meeting_duration_tv"
                            android:layout_marginTop="10dp"
                            android:text="Duration"
                            android:textColor="@color/light_orange" />


                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/duration_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/duration_rl"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/blue_grey_800" />


                <RelativeLayout
                    android:id="@+id/location_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/duration_view"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/location_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_location_black" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/location_imageView">

                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/meeting_place_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Select Location"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/place_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/meeting_place_tv"
                            android:layout_marginTop="10dp"
                            android:text="Location"
                            android:textColor="@color/light_orange" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/location_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/location_rl"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/blue_grey_800" />

                <RelativeLayout
                    android:id="@+id/description_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location_view"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/description_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_message_chat" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/description_imageView">

                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/meeting_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Select Title"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.frissbi.Utility.CustomFontTextView
                            android:id="@+id/title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/meeting_title_tv"
                            android:layout_marginTop="10dp"
                            android:text="Title"
                            android:textColor="@color/light_orange" />

                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/confirm_meeting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/attendee_rl"
        android:src="@drawable/btn_arrow" />

</RelativeLayout>